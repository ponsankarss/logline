#macro(toolbox)
<div id="tool-dialog" title="ToolBox">
<table>
    <tr>
        <td class="tool-table-column">Keys:</td>
        <td class="tool-table-column">
            <input type="button" id="key_prev" value="<"/>
            <input type="button" id="key_next" value=">"/>
        </td>
    </tr>
    <tr>
        <td class="tool-table-column">Thread:</td>
        <td class="tool-table-column">
            <input type="button" id="thread_prev" value="<"/>
            <input type="button" id="thread_next" value=">"/>
        </td>
    </tr>
    <tr>
        <td class="tool-table-column">Error Tabs:</td>
        <td class="tool-table-column">
            <input type="button" id="errors_open" value="+"/>
            <input type="button" id="errors_close" value="-"/>
        </td>
    </tr>
</table>
</div>
#end

#macro(searchResults)
    <h2>Analysis</h2>
    #set( $count = 1 )
    #foreach($key in $keyLines.keySet())
    <div class="thread-box">
    <p class="expand"><a href="#">Thread ${count}</a> <img src="/static/images/arrow.gif"/></p>
    <div class="content">
        <ul>
            #foreach($line in $keyLines.get($key))
            <li class="key-item">$line.html()</li>
            #end
        </ul>
    </div>
    #set($count = $count+1)
    #end
    </div>
#end
#macro(errorResults)
    <h2>Errors</h2>
    <div class="error-box">
        <ul>
            #foreach($line in $errorLines)
            <li class="error-item">
                <p class="expand-error"><a href="#">Error:</a><span class="error-title">$line.errorTitle()</span><img src="/static/images/arrow.gif"/></p>
                <div class="content-error"><pre>$line.html()</pre></div>
            </li>
            #end
        </ul>
    </div>
#end