<html>
#head()
<body>
    #navbar()
    <div class="container-fluid">
        <div class="row-fluid mainbox">
            <div id="main_box">
               <div id="tool_box" class="span12">#logBox()</div>
               <div id="result_box" class="span12">#resultsBox()</div>
            </div>
        </div>
    </div>
</body>
</html>

#macro(navbar)
<div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container-fluid">
            <a class="brand" href="admin/monitor">Blue2 Support</a>
            <div class="nav-collapse">
                <ul class="nav">
                    <li><a href="/">Logs</a></li>
                    <li><a href="#" class="config">Configuration</a></li>
                    <li><a href="#" class="settings">Settings</a></li>
                </ul>
            </div>
        </div>
    </div>
</div
#end

#macro(logBox)
<div id="fetch-log" class="span4">#logFetch()</div>
<div class="span6">#logSearch()</div>
#end

#macro(logSearch)
<h3>Search Logs</h3>
<div id="form_table" class="span8">
    <form id="log_form" class="form-horizontal" action="">
        <div class="control-group">
            <label for="folder" class="control-label">Logs Folder</label>
            <div class="controls"><input id="folder" type="text" class="required" value="${folder}"/></div>
        </div>
        <div class="control-group">
            <label for="keys" class="control-label">Keys</label>
            <div class="controls"><input id="keys" type="text" class="required"/></div>
        </div>
        <div id="buttons" class="form-actions">
            <input type="button" id="analyse" value="Analyse"/>
        </div>
    </form>
</div>
#end

#macro(logFetch)
<form id="log_fetch_form" class="form-horizontal" action="">
<h3>Fetch Logs</h3>
<div class="control-group">
     <label for="folder" class="control-label">Machine</label>
     <div class="controls">
        <select id="machine">
            <option>nasnmasdev</option>
            <option>nasnmasmo</option>
            <option>nasnmas3</option>
        </select>
     </div>
</div>
<div id="buttons" class="form-actions">
    <input type="button" id="fetch_logs" value="Download"/>
</div>
</form>
#end

#macro(resultsBox)
<div id="results"></div>
<div id="loading-div-background">
    <div id="loading-div" class="ui-corner-all">
        <img src="http://www.jakobfolin.com/images/loading.gif" alt="Processing.."/>
        <h2 style="color:gray;font-weight:normal;">Please wait....</h2>
    </div>
</div>
#end

